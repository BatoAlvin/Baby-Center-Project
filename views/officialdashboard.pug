extends layout.pug

block content
    div.row.justify-content-center
        div.col-md-4
            a.btn.btn-primary.btn-block(href="/supervisorregistration") Register Supervisor 
            a.btn.btn-primary.btn-block(href="/sitterregistration") Register Sitter 
            a.btn.btn-primary.btn-block(href="/officialdashboard") View Customer Details
            a.btn.btn-primary.btn-block(href="/officiallogout") Logout

        div.col-md-7
            div.row.justify-content-center Customer Details
                table.table 
                    thead.thead-dark
                        tr
                            th Parent's Contact
                            th Baby's Name
                            th Baby's Age
                            th Club
                            th Billing
                            th Baby's Extra Information
                            th Sitter
                        tbody
                            each user in users
                                tr 
                                    td #{user.parentphone}  
                                    td #{user.babyname}
                                    td #{user.babyage}
                                    td #{user.club}
                                    td #{user.bill}
                                    td #{user.childinformation}
                                    td #{user.sitter}
                                        td
                                            form(method="post" action='/officialdashboard/delete')
                                                input(type="hidden", placeholder="", name="id", value=user._id)
                                                button.remove-doc.btn.btn-danger.col-xs-12(data-id="#{user.id}") Delete
                                                        