extends layout.pug

block content
    div.row.justify-content-center

        div.col-md-5
            div.card-body.border
                header.card-header
                    h4.card-title.text-center.pt-1 Sitter's Registration



                article.card-body
                form(method="POST" action="/sitterregistration" )
                    div.form-row
                        div.col.form-group
                            label First name
                            input.form-control( name="sitterfirstname")

                        div.col.form-group
                            label Last name
                            input.form-control( name="sitterlastname")
                        div.col.form-group
                            label User name
                            input.form-control( name="sitterusername")

                    div.form-row
                        div.col.form-group
                            label Email address
                            input.form-control( name="sitteremailaddress")


                    div.form-row
                        div.col.form-group
                            label.form-check.form-check-inline
                                input.form-check-input(type="radio" name="sittergender" value="male")
                                span.form-check-label Male
                        div.col.form-group
                            label.form-check.form-check-inline
                                input.form-check-input(type="radio" name="sittergender" value="female")
                                span.form-check-label Female




                    div.form-row
                        div.col.form-group
                            label Create password
                            input.form-control(type="password" name="sitterpassword")
                    div.form-row
                        div.col.form-group
                            button.btn.btn-primary.btn-block(type="submit") Register
                            a.btn.btn-primary.btn-block(href="/sitterlogin") Login if you have an account already 

                    div.form-row
                        small.col.text-muted By clicking the 'Sign Up' button, you confirm that you accept our 
                            <br> Terms of use and Privacy Policy.

                form(action="/uploadphoto" enctype="multipart/form-data" method="POST")
                    input(type="file" name="myImage" accept="image/*")
                    input(type="submit" value="Upload Photo")









