        div.col.form-group.col-md-3    
            form(method="post" action='/parentlogout')
                button.btn.btn-dark.btn-block(type="submit") Log out
        div.col.form-group.col-md-9
            form(method="POST" action='/parentdashboard')
                div.form-row
                    div.col.form-group
                        label Please Enter Your Phone number
                        input.form-control(name="parentphone" placeholder="Enter your active number:")
                        input.form-control(name="parentphone2" placeholder="Enter Alternative number:")
                        div.form-row
                    div.col.form-group
                        label Please Enter Your Physical Address
                        input.form-control(name="parentphone" placeholder="Enter your physical address:")
                       


                div.form-row
                    div.col.form-group
                        label.form-check.form-check-inline Do you need care for more than one Baby? 
                    div.form-row
                        div.col.form-group
                            input.form-check-input(type="radio" name="babies" value="more")
                            span.form-check-label Yes
                    div.col.form-group
                        label.form-check.form-check-inline
                            input.form-check-input(type="radio" name="babies" value="one")
                            span.form-check-label No

                    div.col.form-group
                        label Enter Baby's Name
                        input.form-control( name="babyname" placeholder="Enter your child's name:")
                        //- input.form-control( name="babyname" placeholder="Enter your child's name:")
                    div.col.form-group
                        label Enter Baby's Age
                        input.form-control( name="babyname" placeholder="Enter your child's name:")
                        //- input.form-control( name="babyname2" placeholder="Enter your child's name:")
                        
                div.form-row
                    div.col.form-group
                        label Select Time for Care
                        select#inputState.form-control(name="club")
                            option Choose...
                            option(value="Day" ) Day
                            option(value="Night" ) Night
                            option(value="Hours" selected) Hours
                    div.col.form-group
                        label Please Add Extra information for the Sitter on Duty
                        textarea.form-control(name="childinformation" cols="30", rows="3" placeholder="Please enter extra details for your child here:")        
                            
                //- form-row end
                
                    
                
                
                div.form-row
                    div.form-group.col-md-6
                        label Upload Your Baby's Photo
                            //- form(action="/upload" enctype="multipart-form-data")
                            input.form-control(type="file" name="myPhoto" accept="image/*")
                            input(type="submit" value="Upload Photo")
                    div.form-group.col-md-6
                        label Choose your Baby's Sitter
                        select#inputState.form-control(name="sitter")
                            option Choose...
                            option(value="Maria Angella" ) Maria Angella
                            option(value="Doreen Ayebare" ) Doreen Ayebare
                            option(value="Grace Nakimera" selected) Grace Nakimera
                            option(value="Ritah Apio")  Ritah Apio
                            option(value="Sandra Sonko")  Sandra Sonko
                
                    
                div.form-row
                    div.col.form-group
                        button.btn.btn-primary.btn-block(type="submit") Submit
                    
                div.form-row
                    small.col.text-muted By clicking the 'Submit' button, you confirm that you accept our Terms of use and Privacy Policy.
                    br
                    
                        
                                    
            //- End of form
