extends layout
block content
    header.card-header
        h4.card-title Welcome dear Parent
        b Hello, #{currentUser.parentfirstname}  
    |&nbsp
    div.form-row
        //- div.col.form-group.col-md-9    
        //-     form.search(action='/parentregistration/search')
        //-         div.form-row
        //-             div.col-md-8
        //-                 input.form-control(name='city' placeholder="Enter your search term ...")
        //-             div.col-md-4
